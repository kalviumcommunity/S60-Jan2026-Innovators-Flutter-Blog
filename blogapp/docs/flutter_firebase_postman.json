    {
      "name": "Firebase Storage - Images",
      "item": [
        {
          "name": "Upload Blog Post Image",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer YOUR_ID_TOKEN"
              }
            ],
            "body": {
              "mode": "file",
              "file": {
                "src": "/path/to/image.jpg"
              }
            },
            "url": {
              "raw": "https://firebasestorage.googleapis.com/v0/b/YOUR_BUCKET_NAME/o?uploadType=media&name=blog_images/post123.jpg",
              "protocol": "https",
              "host": ["firebasestorage", "googleapis", "com"],
              "path": ["v0", "b", "YOUR_BUCKET_NAME", "o"],
              "query": [
                {
                  "key": "uploadType",
                  "value": "media"
                },
                {
                  "key": "name",
                  "value": "blog_images/post123.jpg"
                }
              ]
            }
          },
          "response": [
            {
              "name": "Success",
              "status": "OK",
              "code": 200,
              "body": "{\n  \"name\": \"blog_images/post123.jpg\",\n  \"bucket\": \"YOUR_BUCKET_NAME\",\n  \"contentType\": \"image/jpeg\",\n  \"timeCreated\": \"2025-01-16T10:30:00.000Z\",\n  \"updated\": \"2025-01-16T10:30:00.000Z\",\n  \"size\": \"512000\"\n}"
            }
          ]
        },
        {
          "name": "Get Download URL",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer YOUR_ID_TOKEN"
              }
            ],
            "url": {
              "raw": "https://firebasestorage.googleapis.com/v0/b/YOUR_BUCKET_NAME/o/blog_images%2Fpost123.jpg?alt=media",
              "protocol": "https",
              "host": ["firebasestorage", "googleapis", "com"],
              "path": ["v0", "b", "YOUR_BUCKET_NAME", "o", "blog_images%2Fpost123.jpg"],
              "query": [
                {
                  "key": "alt",
                  "value": "media"
                }
              ]
            }
          },
          "response": [
            {
              "name": "Success",
              "status": "OK",
              "code": 200,
              "body": "[Binary image data]"
